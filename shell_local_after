# Update local dotfiles
ldfu() {
    declare -f dfu > /dev/null && dfu &&
    (
        cd ~/.dotfiles_local && git pull --ff-only && ./install -q
    )
}

# aliases
alias cirra='cirrascale-cli'

# pip
PIP_REQUIRE_VIRTUALENV=''

# cuda
#
# work around system only setting $CUDA_VISIBLE_DEVICES from $GPUS for login
# shells
export CUDA_VISIBLE_DEVICES="$GPUS"

# work around an issue where scipy can't find libgfortran
#
# not sure why this isn't working otherwise, but working around it is less
# effort than fixing it
export LD_PRELOAD=/opt/anaconda/4.2.0/lib/libgfortran.so.3

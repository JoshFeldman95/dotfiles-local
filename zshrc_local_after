# Simple prompt for displaying shell sessions
function blogprompt() {
    PS1='[anish@blog %1~]$ '
    RPS1=''
}

# Make a 4GB (2048 * 4096M) RAM Disk
function ramdisk() {
    local size
    if [[ -z "${1}" ]]; then
        size=4
    else
        size="${1}"
    fi
    if ! [[ ${size} =~ '^[0-9]+$' && $((${size} > 0)) == "1" && $((${size} <= 12)) == "1" ]]; then
        echo 'Size must be an integer parameter between 1 and 12'
        return 1
    fi
    diskutil erasevolume HFS+ 'RAM Disk' $(hdiutil attach -nomount ram://$((${size} * 2097152)))
}

# Push and jump
function pj() {
    pushd "$(autojump $@)"
}

# Homebrew and Related Tools
[[ -s `brew --prefix`/etc/autojump.sh ]] && . `brew --prefix`/etc/autojump.sh
export HOMEBREW_NO_ANALYTICS=1

export SBT_OPTS="-XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=256M"

export JAVA_HOME=$(/usr/libexec/java_home -v 1.7)

export JUPYTER_PATH="$HOME/.local/share/jupyter"

# OPAM configuration
. ~/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# Go

export GOPATH="$HOME/Documents/Anish/Developer"

# anaconda related binaries
# the anaconda bin is not added to $PATH because it has binaries that override
# default stuff and cause problems (e.g. python gets overridden with python3)
alias jupyter="~/anaconda/bin/jupyter"
alias anaconda-python3="~/anaconda/bin/python3"

# SOCKS proxy

function proxy-on() {
    local interface='Wi-Fi'
    sudo networksetup -setsocksfirewallproxy $interface 127.0.0.1 9050 off
    sudo networksetup -setsocksfirewallproxystate $interface on
}

function proxy-off() {
    local interface='Wi-Fi'
    sudo networksetup -setsocksfirewallproxystate $interface off
}

# Tor

function tor-on() {
    proxy-on
    tor
}

function tor-off() {
    proxy-off
}

